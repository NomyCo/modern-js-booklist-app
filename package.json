{
  "name": "modern-js-booklist-app",
  "version": "1.0.0",
  "description": "BookList app without frameworks",
  "repository": "https://github.com/newbornfrontender/modern-js-booklist-app.git",
  "author": "Infant Frontender <newbornfrontender@gmail.com>",
  "license": "MIT",
  "scripts": {
    "pretty": "prettier --write **/*.{html,css,js,json,md}",
    "serve": "serve public",
    "postcss:dev": "postcss src/index.css -d public -w",
    "postcss:prod": "postcss src/index.css -d public -m --env production",
    "rollup:dev": "rollup -c -w",
    "rollup:prod": "rollup -c --environment BABEL_ENV:production"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/preset-env": "^7.2.3",
    "babel-minify": "^0.5.0",
    "cssnano": "^4.1.8",
    "postcss-cli": "^6.1.1",
    "postcss-preset-env": "^6.5.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "serve": "^10.1.1"
  }
}
